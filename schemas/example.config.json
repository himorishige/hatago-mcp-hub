{
  "$schema": "./config.schema.json",
  "version": 1,
  "logLevel": "info",
  "http": {
    "port": 3000,
    "host": "localhost"
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "."
      ]
    },
    "deepwiki": {
      "type": "remote",
      "url": "https://mcp.deepwiki.com/mcp",
      "transport": "streamable-http"
    },
    "local-script": {
      "command": "node",
      "args": [
        "./my-mcp-server.js"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}