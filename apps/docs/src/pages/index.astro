<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Hatago MCP Hub - Redirecting...</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script>
    // Browser language detection and redirect for static hosting
    (function() {
      const defaultLocale = 'ja';
      const supportedLocales = ['ja', 'en'];
      
      // Get browser language
      const browserLang = (navigator.language || navigator.userLanguage || '').split('-')[0].toLowerCase();
      
      // Determine target locale
      let targetLocale = defaultLocale;
      if (browserLang && supportedLocales.includes(browserLang)) {
        targetLocale = browserLang;
      }
      
      // Redirect to localized homepage
      window.location.replace('/' + targetLocale + '/');
    })();
  </script>
  <noscript>
    <meta http-equiv="refresh" content="0; url=/ja/">
  </noscript>
