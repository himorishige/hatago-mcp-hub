{
  "name": "@hatago/server",
  "version": "0.1.0",
  "description": "NPX-ready MCP Hub server for Claude Code and other AI assistants",
  "type": "module",
  "bin": {
    "hatago": "./dist/cli.js",
    "hatago-server": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:schema && tsdown",
    "build:schema": "cd ../../server && npx tsx scripts/generate-schema.ts",
    "dev": "tsx watch src/cli.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "biome:check": "npx biome check ./src",
    "biome:check:fix": "npx biome check --write ./src",
    "biome:lint": "npx biome lint ./src",
    "biome:format": "npx biome format --write ./src"
  },
  "dependencies": {
    "@hatago/hub": "workspace:*",
    "@hono/node-server": "^1.14.0",
    "hono": "^4.9.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "tsdown": "^0.14.2",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "llm",
    "hub",
    "server"
  ],
  "license": "MIT",
  "author": "Your Name",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hatago-mcp-hub.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/hatago-mcp-hub/issues"
  }
}
