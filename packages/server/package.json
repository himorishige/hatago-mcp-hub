{
  "name": "@himorishige/hatago-server",
  "version": "0.0.4",
  "description": "NPX-ready MCP Hub server for Claude Code and other AI assistants",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:schema && tsdown",
    "build:schema": "tsx scripts/generate-schema.ts",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write ./src",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@himorishige/hatago-core": "workspace:*",
    "@himorishige/hatago-hub": "workspace:*",
    "@hono/node-server": "^1.14.0",
    "hono": "^4.9.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "memfs": "^4.38.2",
    "tsdown": "^0.14.2",
    "tsx": "^4.20.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "llm",
    "hub",
    "server"
  ],
  "license": "MIT",
  "author": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/himorishige/hatago-mcp-hub.git"
  },
  "bugs": {
    "url": "https://github.com/himorishige/hatago-mcp-hub/issues"
  },
  "homepage": "https://github.com/himorishige/hatago-mcp-hub#readme"
}
