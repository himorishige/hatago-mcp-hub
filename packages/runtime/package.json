{
  "name": "@hatago/runtime",
  "version": "0.1.0",
  "description": "Runtime components for Hatago MCP Hub - session, registry, router, and retry management",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./platform": {
      "types": "./dist/platform/index.d.ts",
      "workerd": "./dist/platform/workers.js",
      "node": "./dist/platform/node.js",
      "default": "./dist/platform/index.js"
    },
    "./platform/node": {
      "types": "./dist/platform/node.d.ts",
      "import": "./dist/platform/node.js"
    },
    "./platform/workers": {
      "types": "./dist/platform/workers.d.ts",
      "import": "./dist/platform/workers.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hatago/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "tsdown": "^0.14.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}