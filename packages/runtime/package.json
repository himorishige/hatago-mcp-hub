{
  "name": "@himorishige/hatago-runtime",
  "version": "0.0.15",
  "description": "Runtime components for Hatago MCP Hub - session, registry, router, and retry management",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./platform": {
      "types": "./dist/platform/index.d.ts",
      "import": "./dist/platform/index.js"
    },
    "./platform/node": {
      "types": "./dist/platform/node.d.ts",
      "import": "./dist/platform/node.js"
    },
    "./platform/workers": {
      "types": "./dist/platform/workers.d.ts",
      "import": "./dist/platform/workers.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:forks": "vitest run --pool=forks",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write ./src",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@himorishige/hatago-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.0.0",
    "tsdown": "^0.14.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/himorishige/hatago-mcp-hub.git"
  },
  "bugs": {
    "url": "https://github.com/himorishige/hatago-mcp-hub/issues"
  },
  "homepage": "https://github.com/himorishige/hatago-mcp-hub#readme"
}
