{
  "name": "@himorishige/hatago-hub",
  "version": "0.0.6",
  "description": "User-friendly facade for Hatago MCP Hub",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "workerd": "./dist/workers-entry.js",
      "node": "./dist/node-entry.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./node": {
      "import": "./dist/node-entry.js",
      "types": "./dist/node-entry.d.ts"
    },
    "./workers": {
      "import": "./dist/workers-entry.js",
      "types": "./dist/workers-entry.d.ts"
    },
    "./hub-streamable": {
      "import": "./dist/hub-streamable.js",
      "types": "./dist/hub-streamable.d.ts"
    }
  },
  "scripts": {
    "pretest": "pnpm -w -F @himorishige/hatago-core -F @himorishige/hatago-runtime -F @himorishige/hatago-transport build",
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:forks": "vitest run --pool=forks",
    "test:watch": "vitest",
    "test:node": "vitest run --config vitest.config.ts",
    "test:workers": "vitest run --config vitest.config.workers.ts",
    "test:all": "npm run test:node && npm run test:workers",
    "format": "prettier --write ./src",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@himorishige/hatago-core": "workspace:*",
    "@himorishige/hatago-runtime": "workspace:*",
    "@himorishige/hatago-transport": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "diff": "^8.0.2",
    "hono": "^4.9.4",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.68",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^20.17.10",
    "eventsource": "^4.0.0",
    "miniflare": "^3.20241205.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/himorishige/hatago-mcp-hub.git"
  },
  "bugs": {
    "url": "https://github.com/himorishige/hatago-mcp-hub/issues"
  },
  "homepage": "https://github.com/himorishige/hatago-mcp-hub#readme"
}
