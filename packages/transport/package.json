{
  "name": "@hatago/transport",
  "version": "0.1.0",
  "description": "Transport abstractions and implementations for Hatago MCP Hub",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stdio": {
      "import": "./dist/stdio.js",
      "types": "./dist/stdio.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest",
    "biome:check": "npx biome check ./src",
    "biome:check:fix": "npx biome check --write ./src",
    "biome:lint": "npx biome lint ./src",
    "biome:format": "npx biome format --write ./src",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src"
  },
  "dependencies": {
    "@hatago/core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "license": "MIT"
}
