{
  "name": "@himorishige/hatago-transport",
  "version": "0.0.10",
  "description": "Transport abstractions and implementations for Hatago MCP Hub",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./stdio": {
      "import": "./dist/stdio.js",
      "types": "./dist/stdio.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:forks": "vitest run --pool=forks",
    "test:watch": "vitest",
    "format": "prettier --write ./src",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@himorishige/hatago-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/himorishige/hatago-mcp-hub.git"
  },
  "bugs": {
    "url": "https://github.com/himorishige/hatago-mcp-hub/issues"
  },
  "homepage": "https://github.com/himorishige/hatago-mcp-hub#readme"
}
