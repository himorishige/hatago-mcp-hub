{
  "name": "@hatago/core",
  "version": "0.1.0",
  "description": "Core types and protocol definitions for Hatago MCP Hub",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "biome:check": "npx biome check ./src",
    "biome:check:fix": "npx biome check --write ./src",
    "biome:lint": "npx biome lint ./src",
    "biome:format": "npx biome format --write ./src"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.3"
  },
  "devDependencies": {
    "tsdown": "^0.14.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
