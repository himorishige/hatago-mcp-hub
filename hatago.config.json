{
  "$schema": "https://raw.githubusercontent.com/himorishige/hatago-mcp-hub/main/schemas/config.schema.json",
  "version": 1,
  "timeouts": {
    "requestMs": 120000,
    "keepAliveMs": 15000
  },
  "mcpServers": {
    "deepwiki": {
      "url": "https://mcp.deepwiki.com/mcp",
      "tags": ["dev"]
    },
    "everything": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "tags": ["dev"]
    },
    "cloudflare": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "https://docs.mcp.cloudflare.com/sse",
        "https://bindings.mcp.cloudflare.com/sse",
        "https://builds.mcp.cloudflare.com/sse"
      ],
      "tags": ["cloudflare"]
    },
    "gpt5-mcp": {
      "command": "node",
      "args": [
        "/Users/morishige/ghq/github.com/gotalab/gpt5-mcp-server/dist/cli.js"
      ],
      "env": {
        "ENV_FILE": "/Users/morishige/ghq/github.com/gotalab/gpt5-mcp-server/.env"
      },
      "tags": ["dev"],
      "timeouts": {
        "requestMs": 300000,
        "connectMs": 15000
      },
      "disabled": true
    },
    "claude": {
      "command": "claude",
      "args": ["mcp", "serve"],
      "tags": ["dev"],
      "disabled": true
    },
    "byterover-mcp": {
      "url": "https://mcp.byterover.dev/v2/mcp",
      "headers": {
        "Authorization": "Bearer ${BYTE_ROVER_API_TOKEN}"
      },
      "tags": ["dev"]
    }
  }
}
