{
  "version": 1,
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/tmp"
      ],
      "activationPolicy": "onDemand",
      "idlePolicy": {
        "maxIdleMinutes": 1,
        "checkIntervalMinutes": 0.5
      }
    },
    "everything": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-everything"
      ],
      "activationPolicy": "always"
    }
  }
}