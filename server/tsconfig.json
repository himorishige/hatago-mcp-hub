{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "declaration": true,
    "isolatedDeclarations": false,
    "outDir": "./dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test/**/*",
    "scripts/**/*",
    "app/**/*",
    "src/composition/**/*",
    "src/config/loader-with-result.ts",
    "src/config/loader.test.ts",
    "src/config/env-expander.ts",
    "src/servers/workspace-manager.ts",
    "src/transport/websocket.ts",
    "src/utils/system-check.ts",
    "src/**/*.test.ts",
    "src/config/security-checker.ts",
    "src/config/validator.test.ts",
    "src/config/mcp-converter.test.ts"
  ]
}
