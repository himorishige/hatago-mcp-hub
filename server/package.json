{
  "name": "@himorishige/hatago",
  "version": "0.3.0-lite",
  "description": "Hatago MCP Hub Lite - Ultra-lightweight MCP server management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hatago": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsx src/cli/index.ts serve",
    "build": "tsdown",
    "start": "node dist/cli/index.js serve",
    "cli": "tsx src/cli/index.ts",
    "format": "biome format src --write",
    "lint": "biome lint src --write",
    "check": "biome check src --write",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "commander": "^14.0.0",
    "hono": "^4.9.2",
    "jsonc-parser": "^3.3.1",

    "zod": "^3.23.8"
  },

  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^20.11.17",

    "tsdown": "^0.14.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
