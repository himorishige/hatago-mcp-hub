{
  "name": "@himorishige/hatago",
  "version": "0.0.1",
  "description": "Hatago MCP Hub - Lightweight MCP server management",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hatago": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/workers/entry.workers.js",
      "workerd": "./dist/workers/entry.workers.js",
      "node": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsx src/cli/index.ts serve",
    "build": "tsdown && pnpm build:schema",
    "build:workers": "tsdown --config tsdown.config.workers.ts",
    "build:all": "pnpm build && pnpm build:workers",
    "build:schema": "tsx scripts/generate-schema.ts",
    "start": "node dist/cli/index.js serve",
    "cli": "tsx src/cli/index.ts",
    "dev:workers": "wrangler dev",
    "deploy:workers": "wrangler deploy",
    "format": "biome format src --write",
    "lint": "biome lint src --write",
    "check": "biome check src --write",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hatago/core": "workspace:*",
    "@hatago/runtime": "workspace:*",
    "@hono/node-server": "^1.19.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "commander": "^14.0.0",
    "hono": "^4.9.2",
    "jsonc-parser": "^3.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^20.11.17",
    "@types/ws": "^8.18.1",
    "chalk": "^5.6.0",
    "tsdown": "^0.14.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.33.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
