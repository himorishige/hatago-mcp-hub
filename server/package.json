{
  "name": "@himorishige/hatago",
  "version": "0.1.0",
  "description": "Hatago MCP Hub - Lightweight MCP server management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "hatago": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./observability": {
      "types": "./dist/observability/index.d.ts",
      "import": "./dist/observability/index.js"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "import": "./dist/security/index.js"
    },
    "./proxy": {
      "types": "./dist/proxy/index.d.ts",
      "import": "./dist/proxy/index.js"
    },
    "./legacy": {
      "types": "./dist/legacy/adapter.d.ts",
      "import": "./dist/legacy/adapter.js"
    },
    "./codegen": {
      "types": "./dist/codegen/index.d.ts",
      "import": "./dist/codegen/index.js"
    },
    "./integrations": {
      "types": "./dist/integrations/index.d.ts",
      "import": "./dist/integrations/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators/index.d.ts",
      "import": "./dist/decorators/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsx src/cli/index.ts serve",
    "build": "tsdown",
    "start": "node dist/cli/index.js serve",
    "cli": "tsx src/cli/index.ts",
    "format": "biome format src --write",
    "lint": "biome lint src --write",
    "check": "biome check src --write",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@himorishige/noren": "^0.3.1",
    "@hono/node-server": "^1.19.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.0",
    "hono": "^4.9.2",
    "json-schema-to-typescript": "^15.0.2",
    "json-schema-to-zod": "^2.6.1",
    "jsonc-parser": "^3.3.1",
    "pino": "^9.9.0",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.7.3",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^20.11.17",
    "@types/ws": "^8.5.13",
    "pino-pretty": "^13.1.1",
    "tsdown": "^0.14.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
