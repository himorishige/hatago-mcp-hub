{
  "name": "@himorishige/hatago-lite",
  "version": "0.2.0",
  "description": "Hatago MCP Hub Lite - Minimal MCP server management",
  "type": "module",
  "main": "./dist/lite.js",
  "types": "./dist/lite.d.ts",
  "bin": {
    "hatago": "./dist/cli/index-lite.js"
  },
  "exports": {
    ".": {
      "types": "./dist/lite.d.ts",
      "import": "./dist/lite.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsx src/cli/index-lite.ts serve",
    "build": "tsdown",
    "start": "node dist/cli/index-lite.js serve",
    "cli": "tsx src/cli/index-lite.ts",
    "format": "biome format src --write",
    "lint": "biome lint src --write",
    "check": "biome check src --write",
    "test": "vitest run",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "commander": "^14.0.0",
    "hono": "^4.9.2",
    "jsonc-parser": "^3.3.1",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "@himorishige/noren": "^0.3.1",
    "chalk": "^5.6.0",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.5",
    "json-schema-to-typescript": "^15.0.2",
    "json-schema-to-zod": "^2.6.1",
    "pino": "^9.9.0",
    "pino-pretty": "^13.1.1",
    "reflect-metadata": "^0.2.2",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^20.11.17",
    "@types/ws": "^8.5.13",
    "tsdown": "^0.14.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.24.6"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}